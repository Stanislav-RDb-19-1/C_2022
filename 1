#include <iostream>
using namespace std;
int main(){
float num1 = 5; float num2 = 2;
cout << "Введите первое число: ";
cin >> num1;
cout << "Введите второе число: ";
cin >> num2;
cout << num1 << " + " << num2 << " = " << num1 + num2 << endl;
cout << num1 << " - " << num2 << " = " << num1 - num2 << endl;
cout << num1 << " * " << num2 << " = " << num1 * num2 << endl;
cout << (num1 + num2)/2 << endl;
cout << endl;
return 0;
}
