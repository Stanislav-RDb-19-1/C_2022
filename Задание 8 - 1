#include <iostream>
using namespace std;
int main(){
class CreditCard{
public:
int Number;
float Balance;
CreditCard(int Num, float Bal){
this->Number=Num;
this->Balance=Bal;
}
void Put(float V){
this->Balance+=V;
}
void Take(float V){
if(V>this->Balance) {
cout<<"Sorry, not enough money!"<<endl;
return;}
this->Balance-=V;
}
};
};
