#include <iostream>
#include <string.h>
using namespace std;

class Bus {
public:
int Number;
int People;

void Add_Persons(int n){
People += n;
}

void Remove_Persons(int n){
if (People >= n) People -= n;
}

const Bus operator!(){
cout<<"Номер автобуса"<<' '<<Number<<endl;
cout<<"Количество  людей"<<' '<<People<<endl;
}
};

int main () {

Bus test_1;
test_1.Number = 7;
test_1.People = 13;

test_1.Add_Persons(2);
test_1.Remove_Persons(20);
test_1.Remove_Persons(8);
test_1.operator!();

return 0;
}
