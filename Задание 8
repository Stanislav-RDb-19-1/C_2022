#include <iostream>
using namespace std;

  char Rise(char A){
    return (char) (A-32);
}
  int Rise(int A){
    return A * 10;
}
int main(){
  char A; 
  cout <<"Введите A" << endl;
  cin>>A;
  cout<<endl;
    int num1;
      if(A >= '0' & A <= '9') {
         num1 = A - '0';
cout<<"Получаем из числа "<<A<<" число "<<Rise(num1)<<endl;
}
      else if(A >= 'a' & A <= 'z')
cout<<"Получаем из буквы "<<A<<" букву "<<Rise(A)<<endl;

return 0;
}
