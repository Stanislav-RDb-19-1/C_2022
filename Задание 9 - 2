#include <iostream>
using namespace std;
class CreditCard{
public:
int Number;
float Balance;
CreditCard(int N,float B){
Number=N;
Balance=B;
}
};
void operator+ (CreditCard& x, CreditCard& y){
x.Balance+=y.Balance;
y.Balance=0;
}
int main() {
CreditCard Ivan(1,234);
CreditCard Oleg(2,554);
Ivan+Oleg;
cout<<Ivan.Balance<<endl;
cout<<Oleg.Balance<<endl;
return 0;
}
